<odoo>
    <template id="custom_saleorder_document_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@class='clearfix mt-3']" position="after">
            <div class="text-left" style="padding-top: 100px;">
                <div>
                    <strong t-translation="on">Note:</strong>
                </div>
                <div>
                    <strong t-translation="on">This is a system generated document and therefore no
                        signature required.</strong>
                </div>
                <div>
                    <strong t-translation="on">It is a valid document issued by Nexton Limited.</strong>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
