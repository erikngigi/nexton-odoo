<odoo>
    <template id="custom_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//t[@t-set='layout_document_title']" position="replace">
            <t t-set="layout_document_title">
                <span t-if="is_proforma">Pro-Forma Invoice # </span>
                <span t-elif="doc.state in ['draft','sent']">Quotation # </span>
                <span t-else="">Local Purchase Order # </span>
                <span t-field="doc.name" />
            </t>
            </xpath>
        <xpath expr="//div[@class='clearfix']" position="after">
            <div class="text-center my-3">
                <strong t-translation="on">Note:</strong>
                <strong t-translation="on">This is a system generated document and therefore no signature required.</strong>
                <strong t-translation="on">It is a valid document issued by Nexton Limited.</strong>
            </div>
        </xpath>
    </template>
</odoo>
